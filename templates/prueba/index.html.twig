{% extends 'base.html.twig' %}

{% block title %}Hello PruebaController!{% endblock %}

{% block body %}
<style>
      body {
        background-color: black;
        margin: 0;
        padding: 0;
        color: greenyellow;
      }
      h1 {
        text-align: center;
        width: 50%;
        margin: auto;
        margin-top: 30px;
      }
      table {
        border: 3px solid greenyellow;
        padding: 20px 50px;
        margin-top: 20px;
        border-radius: 5px;
      }
    </style>
  </head>
  <body>
    <h1>FORMULARIO</h1>
    <form name="" method="POST">
      <table border="0" align="center">
        <tr>
          <td>
            Nombre:
          </td>
          <td>
            <label for="nombre"></label>
            <input type="text" name="identidad" id="nombre" required/>
          </td>
        </tr>
        <tr>
          <td>
            Gmail:
          </td>
          <td>
            <label for="usuario"></label>
            <input type="text" name="correo" id="usuario" required/>
          </td>
        </tr>
        <tr>
          <td>
            Telefono:
          </td>
          <td>
            <label for="telefono"></label>
            <input type="text" name="numero" id="telefono"  required/>
          </td>
        </tr>
        <!--<tr>
          <td>
            Repetir contraseña:
          </td>
          <td>
            <label for="rep_pasword"></label>
            <input type="pasword" name="rep_contraseña" id="rep_pasword"  required />
          </td>
        </tr>-->
        <tr>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
        </tr>
        <tr>
          <td align="center">
            <input
              type="submit"
              name="enviar"
              id="enviar"
              value="Registrarse"/>
          </td>
          <td align="center">
            <input type="reset" name="borrar" id="borrar" value="Restablecer" />
          </td>
        </tr>
      </table>
    </form>
  </body>

{% endblock %}
